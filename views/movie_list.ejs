<!DOCTYPE html>
<html lang="en">
  <% include head %>
  <% include navbar %>
  <body>
    
    <div class="container">
      <div class="row">
        <div class="title col-xs-12 text-center">
          <%= titleHeader %>
        </div>
        <div class="col-xs-8 col-xs-offset-2">
          <form id="search-form" class="form-inline" action="/search" method="post">
            <input type="text" placeholder="Movie Title" name="searchString" />
            <button type="submit" class="btn btn-success">Search!</button>
          </form>
        </div>
        <div class="col-xs-12 movies">
          <% for (let i=0; i < movieData.length; i++) { %>
              <div class="col-xs-3 poster-container">
                <a href="/movie/<%= movieData[i].id %>"><img src="<%= imageBaseUrl + movieData[i].poster_path %>"></a>
              </div>
           <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
